<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/configuration"
            android:lines="2"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/customEntry"
            android:textStyle="normal|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="No of Cycles"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="      "
            android:textColor="#000000"
            android:textSize="@dimen/customEntry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Injection Time"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Break Time"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Retrival Time"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rest Time"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cycles"
            android:lines="2"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/customEntry"
            android:textStyle="normal|italic"
            android:gravity="bottom"
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry"
            android:id="@+id/noOfCycles_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Seconds"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/customEntry"
            android:textStyle="normal|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry"
            android:id="@+id/injectionTime_Dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry"
            android:id="@+id/breakTime_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry"
            android:id="@+id/retrivalTime_Dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry"
            android:id="@+id/restTime_Dialog" />


    </LinearLayout>


</LinearLayout>